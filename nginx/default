server {
    listen 80 default_server;
    listen [::]:80 default_server;

    root /php;
    index login.php;

    server_name _;

    # Blocca file nascosti che iniziano con .ht, o con estensioni .bak, .xml, .log, .ini
    location ~ /\.(ht.*|bak|xml|log|ini)$ {
        return 403;
    }

    # Blocca file normali con estensioni .bak, .xml, .log, .ini (case-insensitive)
    location ~* \.(bak|xml|log|ini)$ {
        return 403;
    }

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/run/php/php8.3-fpm.sock;
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }
}